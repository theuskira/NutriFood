<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_botao"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewOrientacao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/colher"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeOrientacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Orientacao"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearOriRecomendacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recomendacao"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtDescricaoRecomendacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Descricao"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:ellipsize="marquee"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearOriEvitar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/evitar"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtDescricaoEvitar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Descricao"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:ellipsize="marquee"
                    android:singleLine="true"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>